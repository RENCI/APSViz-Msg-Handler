[MASTER]
init-hook='import sys; sys.path.append("./")'
max-line-length=150
max-statements=60
disable=broad-except
min-public-methods=0
fail-under=9.95
max-nested-blocks=7
max-locals=20
max-args=7
max-positional-arguments=7